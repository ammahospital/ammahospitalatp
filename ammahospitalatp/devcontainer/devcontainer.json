// .devcontainer/devcontainer.json
{
  "name": "Flutter Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "features": {
    "ghcr.io/devcontainers/features/flutter:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.dart-code",
        "dart-code.flutter"
      ]
    }
  },
  "postCreateCommand": "flutter pub get && flutter pub run build_runner build --delete-conflicting-outputs"
}
